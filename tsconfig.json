{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "rootDir": "./",
        "jsx": "react",
        "module": "ES6",
        "target": "ES2015",
        "moduleResolution": "node",
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true,
        "skipLibCheck": false,
        "sourceMap": true,
        "strictNullChecks": true,
        "maxNodeModuleJsDepth": 5,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "lib": [
            "es2015",
            "dom",
            "esnext"
        ],
        "paths": {
            "*": [
                "typings/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "./typings/**/*"
    ]
}
